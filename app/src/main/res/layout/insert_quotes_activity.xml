<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".Insert.Insert_Quotes">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:gravity="center"
        android:padding="10dp"
        android:text="Insert Quote's"
        android:textSize="25sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#2F4F4F" />

    <Spinner
        android:id="@+id/insert_quote_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:entries="@array/quote_category" />

    <EditText
        android:id="@+id/insert_quotes_category_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Category Id" />

    <EditText
        android:id="@+id/insert_quotes_edittext"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:hint="Enter Quote's"
        android:inputType="textMultiLine"
        android:textAlignment="center" />

    <Button
        android:id="@+id/insert_quote_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:background="#778899"
        android:text="Add"
        android:textColor="#E6E6FA" />

</LinearLayout>